<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="Dashboard">
        <attr name="radius" format="dimension" />
        <attr name="startAngle" format="integer" />
        <attr name="sweepAngle" format="integer" />
        <attr name="bigSliceCount" format="integer" />
        <attr name="sliceCountPerBigSlice" format="integer" />
        <attr name="innerSliceCountPerSmallSlice" format="integer" />
        <attr name="arcColor" format="color" />
        <attr name="sliceTextSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="unitText" format="string" />
        <attr name="valueTextSize" format="dimension" />
        <attr name="minValue" format="integer" />
        <attr name="maxValue" format="integer" />
        <attr name="currentValue" format="integer" />
    </declare-styleable>
</resources>